{% extends 'base.html.twig' %}

{% block title %}reader{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block header %}
    {{ parent() }}
    {% include 'homepage/header.html.twig' %}
{% endblock %}

{% block body %}

    <div class="jumbotron text-center top-info">
        <h1 >Rss reader</h1>
        <img class="cat-gif" src="{{ asset('static/img/read.gif') }}" alt="reading">
    </div>

    <div class="container" style="margin-top:30px">
        <div class="row">
            <div class="col-sm-4">
                <h2>o stranke</h2>

                <div class="site-text">
                    <p>
                        {% for textPart in text %}
                             {{ textPart }}
                        {% endfor %}
                    </p>
                </div>

            </div>
            <div class="col-sm-4 text-center">
                <h2>reading</h2>

                {% if not app.user %}
                    <div class="registration">
                        <a href="{{ url('registration') }}"
                           class="btn button-news btn-large">Registracia</a>
                    </div>
                {% endif %}
            </div>
            <div class="col-sm-4">
                <h2>...</h2>

                <p>
                    {% for textPart in text %}
                        {{ textPart }}
                    {% endfor %}
                </p>

            </div>
        </div>
    </div>

{% endblock %}

{% block footer %}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('homepage') }}
{% endblock %}